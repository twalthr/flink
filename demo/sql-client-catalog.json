//  Catalog for the Flink SQL Client.

{
	"tables": [
		{
			"name": "TestUsers",

			"source": {
				"type": "kafka",
				"properties": {
					"topic": "testUsers",
					"bootstrap.servers": "localhost:9092",
					"zookeeper.connect": "localhost:2181",
					"group.id": "test"
				}
			},

			"encoding": {
				"type": "json",
				"schema": [
					{ "name": "id", "type": "BIGINT" },
					{ "name": "name", "type": "VARCHAR" }
				]
			},

			"rowtime": {
				"type": "ingestion-time",
				"field": "rowtime"
			},

			"proctime": "proctime"
		},

		{
			"name": "TaxiEvents",

			"source": {
				"type": "custom",
				"class": "com.dataartisans.flinktraining.exercises.table_java.sources.TaxiRideTableSource",
				"properties": {
					"dataFilePath": "/Users/twalthr/flink/demo/ffb17/nycTaxiRides.gz",
					"maxEventDelaySecs": "60",
					"servingSpeedFactor": "30" /*"600"*/
				}
			}
		}
	],

	"functions" : [
		{
			"name": "WeightedAvg",
			"class": "com.dataartisans.flinktraining.exercises.datastream_java.utils.MyUDFs$WeightedAvg"
		},

		{
			"name": "IsInNYC",
			"class": "com.dataartisans.flinktraining.exercises.datastream_java.utils.GeoUtils$IsInNYC"
		},

		{
			"name": "ToCellId",
			"class": "com.dataartisans.flinktraining.exercises.datastream_java.utils.GeoUtils$ToCellId"
		},

		{
			"name": "ToCoords",
			"class": "com.dataartisans.flinktraining.exercises.datastream_java.utils.GeoUtils$ToCoords"
		}
	]
}
